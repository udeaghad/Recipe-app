<h1 class="text-2xl font-bold text-center">Add new food</h1>

<div class="w-[100%] flex justify-center align-center" >
<%= form_with model: @food, url: foods_path, method: :post, local: true do |f|%>

  <div>
    <%= f.label :name, class:"form-label" %>
    <%= f.text_field :name, class:'w-full border border-gray-200 py-2' %>
  </div>

  <div>
    <%= f.label :measurement_unit, class:"form-label" %>
    <%= f.text_field :measurement_unit, class: 'w-full border border-gray-200 py-2' %>
  </div>

  <div>
    <%= f.label :price, class:"form-label"%>
    <%= f.text_field :price, class: 'w-full border border-gray-200 py-2 mb-2' %>
  </div>

  <div>
    <%= f.submit "Add food", class:"bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 roundedn"%>
  </div>
  
<% end %>
</div>